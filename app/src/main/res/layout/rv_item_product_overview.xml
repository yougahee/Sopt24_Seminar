<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <LinearLayout
            android:id="@+id/ll_rv_item_product_overview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <ImageView
                android:id="@+id/img_rv_item_product_overview_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"

        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
        >

            <TextView
                    android:id="@+id/tv_rv_item_product_overview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    android:text="작품명"
            />

            <TextView
                    android:id="@+id/tv_rv_item_product_overview_numlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:textColor="#f5cf45"
                    android:text="♥0"
            />

            <TextView
                    android:id="@+id/tv_rv_item_product_overview_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:textColor="#BBBBBB"
                    android:text="작가"
            />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>