<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <LinearLayout
            android:id="@+id/ll_rv_item_webtoonlist_container"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
    >

        <ImageView
                android:id="@+id/img_rv_webtoonlist_overview"
                android:layout_width="86dp"
                android:layout_height="64dp"
                android:src="@drawable/webtoon_main_muneo_img"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding = "10dp"
                android:gravity="center"
        >
            <TextView
                    android:id="@+id/tv_rv_item_webtoonlist_overview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:text="title"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#484848"/>
            <TextView
                    android:id="@+id/tv_rv_item_webtoonlist_overview_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:textColor="#CECECE"
                    android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>